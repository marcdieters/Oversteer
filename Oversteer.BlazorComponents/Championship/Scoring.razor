@using Microsoft.AspNetCore.Components.Forms

<div class="row title">
    <div class="col-sm-10 ">
        <h4>Points</h4>
    </div>
    <div class="col-sm-2">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a @onclick="() => AddPoints()" class="btn btn-primary" style="color:white"><i class="fa-solid fa-plus"></i></a>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-8">
        @foreach (var score in Championship.Points)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row" style="border:thin; border-color: lightgrey">
                        <div class="col-5">
                            <label class="col-form-label">Position</label>
                            <InputNumber id="comment" class="form-control" @bind-Value="@score.Position"></InputNumber>
                            <ValidationMessage For="@(() => score.Position)" />
                        </div>
                        <div class="col-5">
                            <label class="col-form-label">Points</label>
                            <InputNumber id="comment" class="form-control" @bind-Value="@score.Points"></InputNumber>
                            <ValidationMessage For="@(() => score.Position)" />
                        </div>
                        <div class="col-1">
                        </div>
                        <div class="col-1 d-flex aligns-items-center justify-content-center">
                            <a @onclick="() => RemovePoint(score.Id)" class="btn btn-danger" style="color:white">X</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="form-group row">
            <div class="form-check form-switch">
                <InputCheckbox class="form-check-input" style="transform: scale(1.2);" type="checkbox" role="switch" @bind-Value="@Championship.AllowTeamScoring" />
                <label class="form-check-label" style="padding-left: 10px;">Allow team scoring</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-check form-switch">
                <InputCheckbox class="form-check-input" style="transform: scale(1.2);" type="checkbox" role="switch" @bind-Value="@Championship.AllowManufacturerScoring" />
                <label class="form-check-label" style="padding-left: 10px;">Allow manufacturer scoring</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-check form-switch">
                <InputCheckbox class="form-check-input" style="transform: scale(1.2);" type="checkbox" role="switch" @bind-Value="@Championship.AllowWildCardScoring" />
                <label class="form-check-label" style="padding-left: 10px;">Allow manufacturer scoring</label>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label">Fastest lap points</label>
            <InputNumber id="comment" class="form-control" @bind-Value="@Championship.FastestLapPoints" placeholder="Enter a name"></InputNumber>
        </div>

        <div class="form-group row">
            <label class="col-form-label">Fastest lap points</label>
            <InputNumber id="comment" class="form-control" @bind-Value="@Championship.PolePositionPoints" placeholder="Enter a name"></InputNumber>
        </div>

    </div>
</div>
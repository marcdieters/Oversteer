@using Microsoft.AspNetCore.Components.Forms

<div class="row title">
    <div class="col-sm-10">
        <h4>Splits</h4>
    </div>
    <div class="col-sm-2">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a @onclick="() => AddSplit()" class="btn btn-primary" style="color:white"><i class="fa-solid fa-plus"></i></a>
        </div>
    </div>
</div>

@foreach (var split in ChampionshipSplits)
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="row" style="border:thin; border-color: lightgrey">
                <div class="col-11">
                    <SplitEntry Split="split" CarClasses="@CarClasses"></SplitEntry>
                    <ValidationMessage For="@(() => split)" />
                </div>
                <div class="col-1 d-flex aligns-items-center justify-content-center">
                    <a @onclick="() => RemoveSplit(split.Id)" class="btn btn-danger" style="color:white">X</a>
                </div>
            </div>
        </div>
    </div>
}
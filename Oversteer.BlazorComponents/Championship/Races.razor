@using Microsoft.AspNetCore.Components.Forms

<div class="row title">
    <div class="col-sm-10">
        <h4>Races</h4>
    </div>
    <div class="col-sm-2">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a @onclick="() => AddRace()" class="btn btn-primary" style="color:white"><i class="fa-solid fa-plus"></i></a>
        </div>
    </div>
</div>

<table class="table table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Track</th>
            <th>Start</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach (var race in Championship.Races)
        {
            <tr>
                <td>@counter</td>
                <td>@race.Name</td>
                <td>
                    @if (race.Track != null)
                    {
                        <text>@race.Track.Name</text>
                    }
                </td>
                <td>@race.StartTime</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
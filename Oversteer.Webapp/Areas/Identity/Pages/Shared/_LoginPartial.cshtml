@using Microsoft.AspNetCore.Identity
@using Oversteer.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav id="navbar" class="navbar">
    <ul>
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="dropdown">
                <a href="#"><span><i class="fa fa-users" aria-hidden="true"></i></span> <i class="bi bi-chevron-down"></i></a>
                <ul>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Account</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                    </li>
                </ul>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login / Register</a>
            </li>
        }
    </ul>
</nav>

